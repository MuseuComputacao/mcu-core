          <center>
            <spacer size="5%"></spacer>
            <container>
              <div class="custom-body">
                <row>
                  <columns class="header">
                    <center>
                      <img class="logo" src="https://museucomputacao.github.io/assets/images/logo-museu.png" alt="Logo do Museu da Computação da UFRJ" /> 
                    <center>
                  </columns>
                </row>
                <%= yield %>
              </div>
            </container>
          </center>
        </td>
      </tr>
    </table>
  </body>
